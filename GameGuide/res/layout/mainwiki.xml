<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:background="@drawable/altro_foglio"
    android:layout_height="fill_parent"
	>
	<TextView  
	android:textColor="#000000"
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content" 
	    android:text="Guarda dove sono i punti più interessanti intorno a te!     Avvia la realtà aumentata di Wikitude! Quando arriverai sul luogo del culto, sarai avvisato. Premi back per iniziare il gioco."
	    
	    android:textAppearance="?android:attr/textAppearanceLarge"
    	android:layout_marginBottom="15dip"
	    />
<Button
    	android:id="@+id/button2"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:text="@string/launch_wikitude"
    	android:layout_marginBottom="15dip"
    	/>
  <TextView android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:text=""
		android:layout_weight="10" />
			
	<LinearLayout   android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                style="@android:style/ButtonBar" 
                android:gravity="right" 
                >

<Button android:text="procedi" android:id="@+id/ButtonProcedi" android:layout_width="wrap_content"
		android:layout_height="wrap_content"
                 android:layout_weight="0"
                 android:onClick="procedi"></Button>
</LinearLayout>
</LinearLayout>
